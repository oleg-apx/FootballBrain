<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.of17.footballbrain.startMain"
    android:background="@drawable/home_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonStart"
        android:id="@+id/startButton"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textSize="20pt"
        android:textStyle="bold"
        android:textColor="@color/startScreenText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectTeam"
        android:id="@+id/addTeam"
        android:layout_marginTop="73dp"
        android:textColor="@color/startScreenText"
        android:textSize="10pt"
        android:textIsSelectable="false"
        android:layout_below="@+id/startButton"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#ffffff"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addEnemyTeam"
        android:id="@+id/addEnemyTeam"
        android:layout_marginTop="120dp"
        android:textColor="@color/startScreenText"
        android:textSize="10pt"
        android:textIsSelectable="false"
        android:layout_below="@+id/startButton"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="#ffffff"
        android:clickable="true"/>
</RelativeLayout>
